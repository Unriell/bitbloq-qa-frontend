sidebar
    a.link-home(href="/") 
      h1.wobble 
        i.material-icons home
    ul
        each item in (collections !== undefined) ? collections : []
          unless item[0].collection[0] === './src'
            li.collection
                h3= item[0].collection[0]
                ul
                  each report in item
                    li.item
                      a(href='/'+report.path)
                        span= report.title
                        i= report.date
